
{% set expressbtn = config("LoginMask.LoginMask.expressbtn") %}

<style>

#login-card, #guest-register-card {
	border: none;
    border-radius: .5rem;
    -webkit-box-shadow: 0px 1px 12px 3px rgba(0, 0, 0, 0.05);
    box-shadow: 0px 1px 12px 3px rgba(0, 0, 0, 0.05);
}

{% if expressbtn %}

 #ppButton { 
 	position: relative; 

 }
 
  #ppButton img { 
    width: 100%;
    max-height: 46px;
 }
 
 #ppButton a:after {
        content: '{{ trans("LoginMask::LoginMask.PayWith") }}';
        position: absolute;
        top: 0;
        background: #ffb300 url(https://cdn02.plentymarkets.com/ylx159dj5f0p/frontend/assets/img/optimized/img_5.svg) no-repeat;
        background-size: 85px;
        background-position: calc(50% + 30px) center;
        padding-right: 100px;
        padding: 12px 120px 6px 0px;
        display: block;
        width: 100%;
        height: 100%;
        border-radius: .2rem;
        pointer-events: none;
        text-align: center;
        color: #000;
        cursor: pointer;
        transition: all 300ms;
        -webkit-transition: all 300ms;
    }

#ppButton a:hover::after {
        background: #f7ad00 url(https://cdn02.plentymarkets.com/ylx159dj5f0p/frontend/assets/img/optimized/img_5.svg) no-repeat;
        background-size: 85px;
        background-position: calc(50% + 30px) center;
}

.inner-hr {
    margin-top: 2.3em !important;
    margin-bottom: 2.3em !important;
}

.inner-hr-caption {
	position: absolute;
    left: 50%;
    background: #FFF;
    padding: 0 1em;
    color: #ababab;
    -webkit-transform: translate(-50%, calc(-100% - 1.5em));
    transform: translate(-50%, calc(-100% - 1.5em));
